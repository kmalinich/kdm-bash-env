// kdm-bash-env tidy-html5 config file
// To be used with tidy 5.576+


// Document Display options
gnu-emacs: no
markup: yes
quiet: yes
show-body-only: no
show-errors: 6
show-info: no
show-warnings: yes

// Document In and Out options
add-meta-charset: yes
add-xml-decl: no
add-xml-space: no
doctype: html5

// Diagnostics options
accessibility-check: 0 (Tidy Classic)
force-output: yes
show-meta-change: no
warn-proprietary-attributes: no

// Encoding options
char-encoding: utf8
input-encoding: utf8
newline: LF
output-bom: auto
output-encoding: utf8

// Cleanup options
bare: yes
clean: yes
drop-empty-elements: yes
drop-empty-paras: yes
drop-proprietary-attributes: no
gdoc: no
logical-emphasis: yes
merge-divs: auto
merge-spans: auto
word-2000: no

// Entities options
ascii-chars: yes
ncr: yes
numeric-entities: no
preserve-entities: yes
quote-ampersand: no
quote-marks: no
quote-nbsp: yes

// Repair options
alt-text: Image
anchor-as-name: yes
assume-xml-procins: no
coerce-endtags: yes
css-prefix: style
custom-tags: no

enclose-block-text: yes
enclose-text: yes

escape-scripts: yes

fix-backslash: yes
fix-bad-comments: yes
fix-style-tags: yes
fix-uri: yes

literal-attributes: no

lower-literals: yes

repeated-attributes: keep-first
skip-nested: yes
strict-tags-attributes: no

uppercase-attributes: no
uppercase-tags: no

// Transformation options
decorate-inferred-ul: no
escape-cdata: yes
hide-comments: yes

join-classes: yes
join-styles: yes

merge-emphasis: yes
replace-color: no

// Teaching Tidy options
// new-blocklevel-tags: article, aside, canvas, command, details, dialog, figcaption, figure, footer, header, hgroup, menu, meter, nav, section, summary
new-blocklevel-tags: ang-select-usstates, article, aside, canvas, command, details, dialog, figcaption, figure, footer, header, hgroup, menu, meter, nav, rz-slider, rzslider, section, spinner, summary, ui-view, wizard, wz-step
new-inline-tags: alert, audio, canvas, datalist, keygen, mark, meter, output, progress, rp, rt, ruby, source, time, video, wbr
// new-pre-tags:
// new-empty-tags:

// Pretty Print options
break-before-br: yes

indent: yes
indent-attributes: no
indent-cdata: yes
indent-spaces: 1

indent-with-tabs: yes
keep-tabs: yes
tab-size: 1

omit-optional-tags: no
priority-attributes: class, id, name, type
punctuation-wrap: no
sort-attributes: alpha
tidy-mark: no
vertical-space: yes

wrap: 0
wrap-asp: no
wrap-attributes: no
wrap-jste: no
wrap-php: no
wrap-script-literals: no
wrap-sections: no
