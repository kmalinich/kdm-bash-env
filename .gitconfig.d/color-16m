	remote  = "#2ecc71"

[color "diff"]
	context    = "#ffffff dim italic"
	frag       = "#6c71c4"
	meta       = "#f1c40f"
	new        = "#2ecc71 bold"
	old        = "#e74c3c bold"
	whitespace = "#f22222"

