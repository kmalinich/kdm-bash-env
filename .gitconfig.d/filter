[filter "tabspace"]
	clean  = "expand   --tabs=2 --initial"
	smudge = "unexpand --tabs=2 --first-only"

[filter "tabspace2"]
	clean  = "expand   --tabs=2 --initial"
	smudge = "unexpand --tabs=2 --first-only"

[filter "tabspace4"]
	clean  = "expand   --tabs=4 --initial"
	smudge = "unexpand --tabs=4 --first-only"


