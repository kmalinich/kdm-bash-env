[alias]
	a  = add
	af = add -f

	b   = branch
	ba  = branch -a
	bd  = branch -d
	bdd = branch -D

	cl = clone

	co  = checkout
	cob = checkout -b

	c   = commit
	ca  = commit -a
	cam = commit -a -m

	d  = diff
	ds = describe

	f = fetch --all --prune

	i = init

	l  = log
	ll = log --pretty=\"tformat:[%C(yellow)%h%C(reset)][%C(blue)%aI%C(reset)][%cn]: %C(cyan)%s%C(reset)\"

	m = merge

	pl = pull

	ps = push

	pr = !bash -c 'stash pull-request $0 $@'

	prune = fetch --all --prune

	r  = reset
	rh = reset --hard HEAD

	s = status

	sm   = submodule
	smp  = submodule update --init --recursive
	smup = "!f() { git submodule foreach --recursive 'git fetch; git checkout master; git pull'; }; f"

	undo = checkout --

	up = pull --rebase --prune

# vim: set syntax=gitconfig filetype=gitconfig ts=2 sw=2 tw=0 noet :
