/usr/share/snmp/mibs
)

ARRAY_MKDIR=(
${BASH_ENV_DIR_KDM}
${BASH_ENV_DIR_SSH_CONFIG}
${BASH_ENV_DIR_VIM}
)

ARRAY_NODE_PATH=(
