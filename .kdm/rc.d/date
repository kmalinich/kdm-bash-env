# Functions: Date

[[ "${_}" != "${0}" && "${SOURCE_VERBOSE}" == "true" ]] && output keyval "Loaded" "${BASH_SOURCE[@]/$HOME\/\.kdm\//}"


# Output example: '20180801' for August 1st 2018
# Handy for naming backup files
_ymd() {
	date '+%Y%m%d'
}


# Function aliases
alias ymd='_ymd'



