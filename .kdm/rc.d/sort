# Functions: Sort

[[ "${_}" != "${0}" && "${SOURCE_VERBOSE}" == "true" ]] && output kv "Loaded" "${BASH_SOURCE[@]/$HOME\/\.kdm\//}"


# Sort file in-place
_sort_inplace() {
	sort --output="${1}" "${1}"
}

# Sort and uniq file in-place
_uniq_inplace() {
	sort --unique --output="${1}" "${1}"
}


alias sort-inplace='_sort_inplace'
alias uniq-inplace='_uniq_inplace'


