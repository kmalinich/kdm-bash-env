{
	"colors.enable": true,

	"coc.preferences.extensionUpdateCheck": "daily",
	"coc.preferences.useQuickfixForLocations": true,

	"diagnostic.checkCurrentLine": true,
	"diagnostic.enable": true,
	"diagnostic.enableMessage": "jump",
	"diagnostic.errorSign": "✗",
	"diagnostic.hintSign": ">",
	"diagnostic.infoSign": ">",
	"diagnostic.messageDelay": 100,
	"diagnostic.messageTarget": "float",
	"diagnostic.refreshOnInsertMode": true,
	"diagnostic.virtualText": true,
	"diagnostic.virtualTextCurrentLineOnly": true,
	"diagnostic.warningSign": "⚠",

	"eslint.alwaysShowStatus": true,
	"eslint.autoFixOnSave": true,
	"eslint.format.enable": true,
	"eslint.onIgnoredFiles": "warn",

	"javascript.showUnused": false,

	"css.validate": false,
	"less.validate": false,
	"scss.validate": false,

	"stylelintplus.autoFixOnSave": true,
	"stylelintplus.validateOnType": true,

	"suggest.autoTrigger": "trigger",
	"suggest.noselect": false,
	"suggest.removeDuplicateItems": true,
	"suggest.snippetIndicator": "",
	"suggest.timeout": 500,
	"suggest.virtualText": true,
	"suggest.completionItemKindLabels": {
		"class": "\uf0e8",
		"color": "\ue22b",
		"constant": "\uf8fe",
		"constructor": "\uf0ad",
		"default": "\uf29c",
		"enum": "\uf435",
		"enumMember": "\uf02b",
		"event": "\ufacd",
		"field": "\uf9be",
		"file": "\uf723",
		"folder": "\uf114",
		"function": "\u0192",
		"interface": "\uf417",
		"keyword": "\uf1de",
		"method": "\uf09a",
		"module": "\uf40d",
		"operator": "\u03a8",
		"property": "\ue624",
		"reference": "\ufa46",
		"snippet": "\ue60b",
		"struct": "\ufb44",
		"text": "\ue612",
		"typeParameter": "\uf728",
		"unit": "\uf475",
		"value": "\uf89f",
		"variable": "\ue79b"
	},

	"tsserver.enable": false,

	"yaml.completion": true,
	"yaml.format.bracketSpacing":  true,
	"yaml.format.enable": true,
	"yaml.format.printWidth": 160,
	"yaml.format.proseWrap": "never",
	"yaml.format.singleQuote": true,
	"yaml.hover": true,
	"yaml.trace.server": "verbose",
	"yaml.customTags": [
		"!include_dir_merge_list Scalar",
		"!include_dir_merge_named Scalar",
		"!input",
		"!lambda Scalar",
		"!secret Scalar"
	],


	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck"
	},

	"diagnostic-languageserver.linters": {
		"shellcheck": {
			"args": [
				"--shell=bash",
				"--exclude=SC1090",
				"--exclude=SC1117",
				"--exclude=SC2059",
				"--format=gcc",
				"-"
			],
			"command": "shellcheck",
			"debounce": 2000,
			"formatLines": 1,
			"formatPattern": [
				"^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
				{
					"column": 2,
					"line": 1,
					"message": 4,
					"security": 3
				}
			],
			"offsetColumn": 0,
			"offsetLine": 0,
			"securities": {
				"error": "error",
				"note": "info",
				"warning": "warning"
			},
			"sourceName": "shellcheck"
		}
	}
}
