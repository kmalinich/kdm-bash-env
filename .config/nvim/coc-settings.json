{
	"css.validate": false,
	"diagnostic-languageserver.filetypes": {
		"sh": "shellcheck"
	},
	"diagnostic-languageserver.linters": {
		"shellcheck": {
			"args": [
				"--shell=bash",
				"--exclude=SC1090",
				"--exclude=SC1117",
				"--exclude=SC2059",
				"--format=gcc",
				"-"
			],
			"command": "shellcheck",
			"debounce": 100,
			"formatLines": 1,
			"formatPattern": [
				"^[^:]+:(\\d+):(\\d+):\\s+([^:]+):\\s+(.*)$",
				{
					"column": 2,
					"line": 1,
					"message": 4,
					"security": 3
				}
			],
			"offsetColumn": 0,
			"offsetLine": 0,
			"securities": {
				"error": "error",
				"note": "info",
				"warning": "warning"
			},
			"sourceName": "shellcheck"
		}
	},
	"javascript.suggestionActions.enabled": false,
	"less.validate": false,
	"scss.validate": false,
	"suggest.autoTrigger": "trigger",
	"suggest.noselect": false,
	"suggest.timeout": 500,
	"wxss.validate": false
}
